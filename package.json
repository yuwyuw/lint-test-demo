{
  "private": true,
  "name": "lint-demo",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "lint": "eslint . --format stylish",
    "prepare": "husky install"
  },
  "workspaces": [
    "pages/*"
  ],
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint-staged",
      "pre-push": "npm test"
    }
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}, */x/x.{js,jsx,ts,tsx}": "eslint --format stylish --max-warnings=0"
  },
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@commitlint/cli": "^19.3.0",
    "@commitlint/config-conventional": "^19.2.2",
    "@eslint/compat": "^1.0.1",
    "@eslint/js": "^9.3.0",
    "eslint": "^9.3.0",
    "eslint-plugin-react": "^7.34.1",
    "globals": "^15.3.0",
    "husky": "^9.0.11",
    "lerna": "^8.1.3",
    "lint-staged": "^15.2.4"
  },
  "dependencies": {
    "react": "^17.0.2",
    "react-dom": "^17.0.2"
  }
}
